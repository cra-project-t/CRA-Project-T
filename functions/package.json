{
  "name": "functions",
  "scripts": {
    "lint": "eslint \"src/**/*\"",
    "build": "tsc",
    "watch": "nodemon --watch 'src/**/*.ts' --exec 'yarn build' --ext ts,json",
    "serve": "export GOOGLE_APPLICATION_CREDENTIALS='secrets/firebase-admin.json' && yarn build && firebase emulators:start --only functions",
    "serve:windows": "cmd /V /C \"set GOOGLE_APPLICATION_CREDENTIALS='secrets/firebase-admin.json'&& npm run build && firebase emulators:start â€”only functions\"",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "12"
  },
  "main": "lib/index.js",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase-admin": "^9.2.0",
    "firebase-functions": "^3.11.0",
    "firebase-tools": "^9.2.2",
    "kill-port": "^1.6.1",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "nodemon": "^2.0.7",
    "typescript": "^3.9.7"
  },
  "private": true
}
